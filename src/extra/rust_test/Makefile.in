#
# ${R_HOME}/src/extra/rust_test/Makefile
# Test Makefile for Rust compilation support

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/extra/rust_test
R_HOME = $(top_builddir)

include $(top_builddir)/Makeconf

SOURCES_RS = hello.rs
OBJECTS = $(SOURCES_RS:.rs=.o)

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = Makefile.in $(SOURCES_RS)

all: R

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@

R: $(OBJECTS)
	@echo "Rust test objects built: $(OBJECTS)"

clean:
	-rm -f $(OBJECTS)

distclean: clean
	-rm -f Makefile

install install-strip uninstall:

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done

.PHONY: all R clean distclean install install-strip uninstall distdir
